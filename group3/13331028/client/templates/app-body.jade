template(name="appBody")
	#header
		h1 Welcome to MyHomework
		ul.signin
			if currentUser
				li
					a.logout(href="/") Logout
			else
				li 
					a(href="{{pathFor 'signin'}}") Signin
				li
					a(href="{{pathFor 'join'}}") Join
	
	#content
		#sidebar
			ul
				li this is sidebar
			if currentUser
				a.new-hw New Homework	
				ul
					each hwlists
						li
							a(href="{{pathFor 'hwsShow'}}", title="#{name}")= name
					else
						li there is no hw yet

		#main-content
			p This is the main content.
			div.container
				div.row
					div.col-sm-6.col-md-4.col-md-offset-4
						each thisArray
							+yield

		div.clear

	script(type="application/javascript", src="http://localhost:35729/livereload.js")
	script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js")
